{
  "name": "openclaw-desktop",
  "productName": "OpenClaw Desktop",
  "version": "0.1.0",
  "description": "Windows desktop shell for OpenClaw using Electron + WSL2",
  "main": "dist/main/main.js",
  "author": "Mahmo",
  "homepage": "https://github.com/mahmoodmsaad/open_claw_gui",
  "bugs": {
    "url": "https://github.com/mahmoodmsaad/open_claw_gui/issues"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean": "rimraf dist",
    "build:main": "esbuild src/main/main.ts --bundle --platform=node --target=node20 --format=cjs --outdir=dist/main --external:electron --packages=external --sourcemap",
    "build:preload": "esbuild src/preload/index.ts --bundle --platform=node --target=node20 --format=cjs --outdir=dist/preload --external:electron --packages=external --sourcemap",
    "build:renderer": "vite build --config vite.config.ts",
    "build": "npm run clean && npm run build:main && npm run build:preload && npm run build:renderer",
    "dev:renderer": "vite --config vite.config.ts --port 5173",
    "dev:main": "esbuild src/main/main.ts --bundle --platform=node --target=node20 --format=cjs --outdir=dist/main --external:electron --packages=external --sourcemap --watch",
    "dev:preload": "esbuild src/preload/index.ts --bundle --platform=node --target=node20 --format=cjs --outdir=dist/preload --external:electron --packages=external --sourcemap --watch",
    "dev:electron": "wait-on tcp:5173 file:dist/main/main.js file:dist/preload/index.js && cross-env VITE_DEV_SERVER_URL=http://127.0.0.1:5173 electron .",
    "dev": "concurrently -k -n RENDERER,MAIN,PRELOAD,ELECTRON -c cyan,green,magenta,yellow \"npm run dev:renderer\" \"npm run dev:main\" \"npm run dev:preload\" \"npm run dev:electron\"",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run --config vitest.config.ts",
    "test:watch": "vitest --config vitest.config.ts",
    "prepack": "rimraf release",
    "pack": "npm run build && electron-builder --dir --config electron-builder.yml",
    "predist": "rimraf release",
    "dist": "npm run build && electron-builder --config electron-builder.yml"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mahmoodmsaad/open_claw_gui.git"
  },
  "dependencies": {
    "electron-log": "^5.4.1",
    "keytar": "^7.9.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "semver": "^7.7.2"
  },
  "devDependencies": {
    "@types/node": "^22.15.3",
    "@types/react": "^19.1.4",
    "@types/react-dom": "^19.1.4",
    "@types/semver": "^7.7.0",
    "@vitejs/plugin-react": "^5.0.1",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^36.2.0",
    "electron-builder": "^26.0.12",
    "esbuild": "^0.25.4",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vitest": "^3.1.3",
    "wait-on": "^8.0.3"
  }
}
